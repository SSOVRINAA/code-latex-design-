% --- 1. Math & English Alignment (Scaled Up) ---
\usepackage{unicode-math}

% Boost the scale here (1.08 to 1.1 is usually the "sweet spot")
\setmainfont{STIX Two Text}[Scale=1.1] 
\setmathfont{STIX Two Math}[Scale=1.1]

% --- 2. Khmer Integration ---
% We keep these at their standard relative scales
\newfontfamily\khmerfont[Script=Khmer, Scale=1.1]{Khmer OS}
\newfontfamily\khmerheadingfont[Script=Khmer, Scale=1.2]{Khmer OS Muol Light}

% --- 3. Custom Commands ---
\newcommand{\kh}[1]{{\khmerfont #1}}
\newcommand{\khh}[1]{{\khmerheadingfont #1}}
% --- 4. Language Management ---
\usepackage{polyglossia}
\setmainlanguage{khmer}
\setotherlanguage{english}
